# Problem library questions go to the wwadmin's home directory;
# there are symlinks from there to the courses
export COLL="IntroStats"

export SRC_DIR=$COLL
export TARGET_DIR="/home/wwadmin/LibraryQueens/$COLL"
export SERVER="InWebwork4"
rsync -arv --perms --exclude "*~" -e ssh $SRC_DIR/ $SERVER:$TARGET_DIR/
ssh $SERVER 'chmod -R a+rX' $TARGET_DIR 

# The data also has to be uploaded
rsync -arv --perms --include "*.csv" --include "*.xlsx" -e ssh IntroStats/Module01_Datasets/* InWebwork4:/opt/webwork/courses/IntroStats/html/Module01
rsync -arv --perms --include "*.csv" --include "*.xlsx" -e ssh IntroStats/Module02_Datasets/* InWebwork4:/opt/webwork/courses/IntroStats/html/Module02



