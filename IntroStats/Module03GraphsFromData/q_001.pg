# Part (a)
$time_of_max_height = Compute("25");

# Part (b)
@opts1 = (
"xlab='Tree Age (yrs)', ylab = 'Tree Height (m)'",
"xlab='Tree Height (m)', ylab = 'Tree Age (yrs)'",
"xlab='Tree Height (yrs)', ylab = 'Tree Age (m)'",
"xlab='Tree Age (m)', ylab = 'Tree Height (yrs)'",
);
